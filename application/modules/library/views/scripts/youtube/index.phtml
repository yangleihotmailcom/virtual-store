     <script type="text/javascript">
           $(document).ready( function () {
               $('a.videoLink').css({ "background-image": "url('/images/demopage.png')"})
                               .click( function (){
                                    var youtubeId = $(this).attr('youtube');
                                    var href = "http://www.youtube.com/v/" + youtubeId ;
                                    var height = 315*2;
                                    var width = 420*2;
 
                                    $.fancybox({
                                        'padding'      : 0,
                                        'autoScale'    : false,
                                    	'transitionIn' : 'fade',
                            			'transitionOut': 'fade',
                            			'title'        : $(this).attr('caption'),
                        			    'width'        : width,
                        			    'height'       : height,
                        			    'href'         : href,
                        			    'type'         : 'swf',
                        			    'swf'          :{ 'wmode': 'transparent' , 'allowfullscreen': 'true'}     
                                        });
                                })
                               .each( function (i, link ) {
                                   var caption = $(this).attr('caption');
                            	   $(this).html('<div class="caption">'+caption+'</div><img class="play" src="/images/playIcon.png" />');
                                   var youtubeId = $(this).attr('youtube');
                                   var href = "http://www.youtube.com/v/" + youtubeId ;
                            	   $( '#tabs-'+(i+2)+' > p > a').attr({href:href});
                                });
               
               $('#intro').tabs();
           });
